
pipeline {

    agent any
    tools {
        maven 'Maven_3.9.0' // Name of the Maven installation defined in Jenkins
    }
    stages {
        stage('Check Maven Path') {
            steps {
                sh 'echo "Maven path: ${tool \'Maven_3.9.0\'}"'
                sh 'mvn -version'
                sh 'mvn clean package'
            }
        }
    }
}
